<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <Space
        android:id="@+id/space_login_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_login"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/bg_login_top"
        app:layout_constraintBottom_toTopOf="@+id/et_login_account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space_login_one" />

    <EditText
        android:id="@+id/et_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@mipmap/bg_login_name"
        android:drawableLeft="@mipmap/bg_login_name"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:hint="请输入账号"
        android:padding="14dp"
        android:textColorHint="#1e8bc3"
        app:layout_constraintBottom_toTopOf="@+id/et_login_password"
        app:layout_constraintTop_toBottomOf="@+id/iv_login" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@mipmap/bg_login_password"
        android:drawableLeft="@mipmap/bg_login_password"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textColorHint="#1e8bc3"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintTop_toBottomOf="@+id/et_login_account" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="#1e8bc3"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_login"
        app:layout_constraintTop_toBottomOf="@+id/et_login_password" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="欢迎进入智慧华广后勤"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/space_login_two"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <Space
        android:id="@+id/space_login_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login" />

</android.support.constraint.ConstraintLayout>