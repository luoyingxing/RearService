<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99b8b8b8">

    <View
        android:id="@+id/space_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/lv_order_panel"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_order_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/gray_f9"
        android:dividerHeight="2dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_order_panel_cancel"
        app:layout_constraintTop_toBottomOf="@+id/space_order" />

    <TextView
        android:id="@+id/tv_order_panel_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="14dp"
        android:text="取消"
        android:textColor="@color/gray_21"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_order_panel" />

</android.support.constraint.ConstraintLayout>