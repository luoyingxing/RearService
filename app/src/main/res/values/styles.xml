<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/ActionBar.Solid.Custom</item>
        <item name="actionBarSize">48dp</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">#03a9e4</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBar.Solid.Custom" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/BaseActionBarTitleText</item>
    </style>

    <style name="BaseActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/theme_color</item>
    </style>

</resources>